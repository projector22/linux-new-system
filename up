#!/bin/bash
echo Checking for updates - Apt, Yum, Flatpak

if hash apt 2>/dev/null; then
  echo -e "\nAPT"
  sudo apt update
  sudo apt list --upgradable
  sudo apt -f install
  sudo apt full-upgrade -yy
  sudo apt autoremove -yy
  sudo apt clean -yy
  echo -e "Apt update complete"
fi

if hash snap 2>/dev/null; then
  echo -e "\nSNAP"
  sudo snap refresh
  echo -e "snap update complete"
fi

if hash yum 2>/dev/null; then
  echo -e "\nYUM"
  sudo yum update -yy
  echo -e "yum update complete"
fi

if hash flatpak 2>/dev/null; then
  echo -e "\nFLATPAK"
  sudo flatpak update -yy
  echo -e "flatpak update complete"
fi

if hash pihole 2>/dev/null; then
  echo -e "\nPIHOLE"
  pihole -up
  echo -e "pihole update complete"
fi

# if hash pip 2>/dev/null; then
#   sudo python3 -m pip install -U pip
#   pip3 install pip-review
#   sudo python3 -m pip_review --local --auto
# fi

echo -e "\n\nAll updates complete"
